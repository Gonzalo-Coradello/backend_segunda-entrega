<div>
    <table>
        <thead>
            <tr>
                <th>Título</th>
                <th>Autor</th>
                <th>Descripción</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            {{#each docs}}
                <tr>
                    <td><a href="/products/{{this._id}}">{{this.title}}</a></td>
                    <td>{{this.author}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.price}}</td>
                </tr>

            {{!-- <div>
                <h2>{{this.title}}</h2>
                <p>{{this.description}}</p>
                <p>{{this.price}}</p>
                <a href="/{{this._id}}">Ir al producto</a>
            </div> --}}

            {{/each}}
        </tbody>
    </table>

    <div>
        {{#if hasPrevPage}}
            <a href="{{prevLink}}">Anterior</a>
        {{/if}}
        {{#if hasNextPage}}
            <a href="{{nextLink}}">Siguiente</a>
        {{/if}}
    </div>
</div>